<body>

  <header class="masthead" style="background-image: url('assets/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Tateyama Lodge Blog</h1>
            <span class="subheading">立山ロッジの職員が不定期に更新するブログです。</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <div class="conteiner row">
    <div  class="col-3">
      <%= render "shared/sidebar" %>
    </div>
    <div class="col-9">
      <% if @entries.present? %>
        <% @entries.each do |entry| %>
          <div class="p-3 mb-3 bg-light rounded">
            <h2><%= entry.title %></h2>
            <p>
              <div class="index-image">
                <% if first_image(entry.body) != nil %>
                  <%= image_tag(first_image(entry.body), size: "100x100") %>
                <% end %>
              </div>
              <%= entry.title %>
              <%= sanitize(remove_image(entry.body).truncate(100))%>
              <%= link_to "もっと読む", entry %>
              <%= render "footer", entry: entry %>
            </p>
          </div>
        <% end %>
        <%= paginate @entries %>
      <% else %>
        <p>記事がありません</p>
      <% end %>
    </div>
  </div>
</body>

</html>
