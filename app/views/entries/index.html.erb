<body>

  <header class="masthead" style="background-image: url('assets/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Tateyama Lodge Blog</h1>
            <span class="subheading">立山ロッジの職員が不定期に更新するブログです。</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <div id="blog-container">

    <div class="blogmain">
      <% if @entries.present? %>
        <% @entries.each do |entry| %>
          <div class="p-3 mb-3 bg-light rounded">
            <h2><%= entry.title %></h2>
            <p>
              <div class="index-image">
                <%= sanitize(first_image(entry.body)) %>
              </div>
              <%= entry.title %>
              <%= sanitize(remove_image(entry.body).truncate(100))%>
              <%= link_to "もっと読む", entry %>
              <%= render "footer", entry: entry %>
            </p>
          </div>
        <% end %>
        <%= paginate @entries %>
      <% else %>
        <p>記事がありません</p>
      <% end %>
    </div>

    <aside id="sidebar">
      <%= render "shared/sidebar" %>
    </aside>
  </div>

</body>

</html>
