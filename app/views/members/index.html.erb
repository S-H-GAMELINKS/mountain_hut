<div class="container">

  <% @page_title = "職員名簿" %>
  <h1><%= @page_title %></h1>

  <% if @members.present? %>
    <table class="list">
      <thead>
        <tr>
          <th>ユーザー名</th>
          <th>氏名</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= link_to member.name, member %></td>
            <td><%= member.full_name %></td>
            <td><%= link_to "編集", [:edit, member] %> |
                <%= link_to "削除", member, method: :delete,
                  data: { confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>会員情報がありません</p>
  <% end %>

</div>
